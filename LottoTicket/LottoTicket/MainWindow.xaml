<Window x:Class="LottoTicket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LottoTicket"
        mc:Ignorable="d"
        Title="MainWindow" Height="605" Width="422">
    <Grid Margin="0,0,2,-3">
        <Image x:Name="BackgroundImage" HorizontalAlignment="Left" Height="577" VerticalAlignment="Top" Width="412" Opacity="0.3" Source="Lotto.png" Stretch="Fill"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="25,544,0,0" TextWrapping="Wrap" Text="Enter the number of rows (1 to 20)" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxTickets" HorizontalAlignment="Left" Height="23" Margin="226,543,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="33"/>
        <Button x:Name="ButtonSelect" Content="Press for Ticket" HorizontalAlignment="Left" Margin="274,545,0,0" VerticalAlignment="Top" Width="108" Click="ButtonSelect_Click"/>
        <TextBlock x:Name="TextBlockTickets" HorizontalAlignment="Left" Margin="25,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="365" Height="503" FontFamily="Courier New" FontSize="16" FontWeight="Bold" Background="#CCFFFFFF"/>

    </Grid>
</Window>
